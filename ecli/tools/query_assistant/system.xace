<?xml version="1.0"?>

<system name="query_assistant">
	<description>
		system: "query_assistant: Access modules Generator"
		copyright: "Copyright (c) 2002, Paul G. Crismer and others."
		license: "Eiffel Forum License v1 (see forum.txt)"
		date: "$Date: 2003/05/08 13:54:36 $"
		revision: "$Revision: 1.3 $"
	</description>

	<root class="ACCESS_GEN" creation="make"/>
	<option unless="${DEBUG}">
		<option name="assertion" value="none"/>
		<option name="garbage_collector" value="none"/>
		<option name="finalize" value="true" unless="${GOBO_EIFFEL}=ve"/>
	</option>
	<option if="${DEBUG}">
		<option name="assertion" value="all"/>
		<option name="garbage_collector" value="none"/>
		<option name="finalize" value="false"/>
	</option>
	<option if="${GOBO_DOTNET}">
		<option name="msil_generation" value="true"/>
		<option name="line_generation" value="true"/>
	</option>

	<cluster name="a_root_cluster" location="${ECLI}/tools/query_assistant/src"/>
	
	<mount location="${ECLI}/support/codegen/library.xace"/>
	
	<mount location="${ECLI}/library.xace"/>	
	<mount location="${GOBO}/library/library.xace"/>
	<mount location="${GOBO}/library/kernel.xace"/>
</system>
